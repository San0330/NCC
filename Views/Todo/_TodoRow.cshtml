@model MyTodoApp.Models.Todo

<tr class="border-t hover:bg-gray-50">
    <td class="px-4 py-2">@Model.Task</td>
    <td class="px-4 py-2">
        @if (Model.IsCompleted)
        {
            <span class="text-green-600 font-semibold">Completed</span>
        }
        else
        {
            <span class="text-red-600">Incomplete</span>
        }
    </td>
    <td class="px-4 py-2 space-x-2">
        <a asp-controller="Todo" asp-action="Edit" asp-route-id="@Model.Id"
           class="text-blue-600 hover:underline">Edit</a>
        <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="inline">
            <button class="text-red-600 hover:underline" type="submit">Delete</button>
        </form>
    </td>
</tr>
